					cenario[detetiveLinha1][detetiveColuna1] = 2;
					cenario[detetiveLinha2][detetiveColuna2] = 2;
					cenario[detetiveLinha3][detetiveColuna3] = 2;
					cenario[detetiveLinha4][detetiveColuna4] = 2;
				}
			}
			for (int i = 0; i < 22; i++) {
				for (int j = 0; j < 30; j++) {
					printf("%i", cenario[i][j]);
				}
