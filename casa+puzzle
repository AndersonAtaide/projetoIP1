				else if (click.key.keysym.sym == SDLK_w)
				{
					cima = true;
				}
				else if (click.key.keysym.sym == SDLK_s)
				{
					baixo = true;
				}
				else if (click.key.keysym.sym == SDLK_k)
				{
					if (chatBox == false)
						chatBox = true;
					else if (chatBox == true)
						chatBox = false;

					if (cenario[8][0] == 2 && cenario[8][1] == 2)
					{
						if (chave1 == 0)
						{
							chave1 = 1;
							printf("você adiquiriu a chave 1\n");
						}
					}

					else if (cenario[18][12] == 2)
					{
						if (chave2 == 0)
						{
							chave2 = 1;
							printf("você encontrou a chave 2 em baixo da cama!\n");
						}
					}

					else if (cenario[13][28] == 2)
					{
						if (chave2 == 1 && chave3 == 0)
						{
							chave3 = 1;
							chave2 = 3; 
							printf("você adiquiriu a chave 3\n");
						}	
					}

					else if (cenario[5][8] == 2)
					{
						if (chave3 == 1 && chave4 == 0)
						{
							chave4 = 1;
							chave3 = 3;
							printf("você adiquiriu a chave 4\n");
						}
					}
					
					else if (cenario[4][25] == 2 && cenario[4][26] == 2)
					{
						bau = 1;
						printf("você adiquiriu um baú com 2 fechaduras!\n");
					}

					else if (cenario[7][13] == 2 && cenario[7][14] == 2 && chave1 == 1 && chave4 == 1 && bau == 1)
					{
						cartaDeAmor = 1;
						chave1 = 3;
						chave4 = 3;
						bau = 3;
						printf("Você abriu o bau e encontrou uma carta, aperte k para ler!");
					}

					else if (chave1 == 1 && chave4 == 1 && bau == 1)
					{
						printf("Você achou o baú e as chaves para abri-lo, vá ao local correto para abrir o baú!!!\n");
					}
					
					if (cenario[3][3] == 2)
